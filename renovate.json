{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":dependencyDashboard"
  ],
  "description": "Renovate configuration for LiteLLM EKS deployment",
  "labels": ["dependencies"],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,
  "packageRules": [
    {
      "description": "Terraform provider updates",
      "matchDatasources": ["terraform-provider"],
      "matchPackagePatterns": ["*"],
      "groupName": "Terraform providers",
      "schedule": ["before 6am on monday"],
      "automerge": false,
      "rangeStrategy": "update-lockfile",
      "separateMinorPatch": true
    },
    {
      "description": "Terraform module updates",
      "matchDatasources": ["terraform-module"],
      "matchPackagePatterns": ["*"],
      "groupName": "Terraform modules",
      "schedule": ["before 6am on monday"],
      "automerge": false,
      "separateMinorPatch": true
    },
    {
      "description": "Docker image updates - critical security",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major", "minor", "patch"],
      "labels": ["dependencies", "docker"],
      "automerge": false,
      "groupName": "Docker images",
      "schedule": ["before 6am on monday"]
    },
    {
      "description": "Helm chart updates",
      "matchDatasources": ["helm"],
      "matchPackagePatterns": ["*"],
      "groupName": "Helm charts",
      "schedule": ["before 6am on monday"],
      "automerge": false,
      "separateMinorPatch": true
    },
    {
      "description": "GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions",
      "automerge": true,
      "automergeType": "pr",
      "schedule": ["before 6am on monday"],
      "pinDigests": true
    },
    {
      "description": "Kubernetes version - major updates require manual review",
      "matchDatasources": ["docker"],
      "matchPackageNames": ["eks", "kubernetes"],
      "matchUpdateTypes": ["major"],
      "enabled": true,
      "automerge": false,
      "labels": ["dependencies", "kubernetes", "breaking-change"],
      "prPriority": 10
    },
    {
      "description": "Pin AWS Terraform providers to avoid breaking changes",
      "matchDatasources": ["terraform-provider"],
      "matchPackageNames": ["hashicorp/aws"],
      "rangeStrategy": "pin",
      "automerge": false
    },
    {
      "description": "Security patches - auto-merge with tests",
      "matchUpdateTypes": ["patch"],
      "matchPackagePatterns": ["*"],
      "automerge": true,
      "automergeType": "pr",
      "labels": ["dependencies", "security-patch"]
    }
  ],
  "terraform": {
    "fileMatch": [
      "\\.tf$",
      "(^|/)terraform\\.tfvars$",
      "(^|/)\\.?terraform\\.tfvars\\.json$"
    ]
  },
  "dockerfile": {
    "fileMatch": [
      "(^|/|\\.)Dockerfile$",
      "(^|/)Dockerfile\\.[^/]*$"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/helm-values/.*\\.yaml$/"
    ]
  },
  "kubernetes": {
    "fileMatch": [
      "\\.ya?ml$"
    ]
  },
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/.terraform/**",
    "**/examples/**",
    "**/test/**",
    "**/tests/**"
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "commitMessagePrefix": "chore(deps):",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "dependencies"],
    "assignees": ["@renovate-bot"],
    "automerge": false
  },
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboardTitle": "Dependency Dashboard - LiteLLM EKS",
  "dependencyDashboardHeader": "This dashboard tracks all pending dependency updates for the LiteLLM EKS deployment infrastructure.",
  "timezone": "America/New_York"
}
