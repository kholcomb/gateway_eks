{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":semanticCommits",
    ":dependencyDashboard"
  ],
  "description": "Renovate configuration for managing Terraform, Docker, Helm, and GitHub Actions dependencies with specific rules and schedules.",
  "labels": [
    "dependencies"
  ],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true,
  "packageRules": [
    {
      "description": "Terraform provider updates",
      "matchDatasources": [
        "terraform-provider"
      ],
      "groupName": "Terraform providers",
      "schedule": [
        "before 6am on monday"
      ],
      "automerge": false,
      "rangeStrategy": "update-lockfile",
      "separateMinorPatch": true,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "description": "Terraform module updates",
      "matchDatasources": [
        "terraform-module"
      ],
      "groupName": "Terraform modules",
      "schedule": [
        "before 6am on monday"
      ],
      "automerge": false,
      "separateMinorPatch": true,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "description": "Redis Docker image updates",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "redis"
      ],
      "groupName": "Redis Docker image",
      "labels": [
        "dependencies",
        "docker",
        "redis"
      ],
      "automerge": false,
      "schedule": [
        "before 6am on monday"
      ]
    },
    {
      "description": "Redis exporter Docker image updates",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "quay.io/oliver006/redis_exporter"
      ],
      "groupName": "Redis Exporter Docker image",
      "labels": [
        "dependencies",
        "docker",
        "redis-exporter"
      ],
      "automerge": false,
      "schedule": [
        "before 6am on monday"
      ]
    },
    {
      "description": "Jaeger Docker image updates",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "jaegertracing/all-in-one"
      ],
      "groupName": "Jaeger Docker image",
      "labels": [
        "dependencies",
        "docker",
        "jaeger"
      ],
      "automerge": false,
      "schedule": [
        "before 6am on monday"
      ]
    },
    {
      "description": "External Secrets Docker image updates",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/external-secrets/external-secrets"
      ],
      "groupName": "External Secrets Docker image",
      "labels": [
        "dependencies",
        "docker"
      ],
      "automerge": false,
      "schedule": [
        "before 6am on monday"
      ]
    },
    {
      "description": "OpenWebUI Docker image updates",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/open-webui/open-webui"
      ],
      "groupName": "OpenWebUI Docker image",
      "labels": [
        "dependencies",
        "docker",
        "openwebui"
      ],
      "automerge": false,
      "schedule": [
        "before 6am on monday"
      ]
    },
    {
      "description": "Other Docker image updates",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "labels": [
        "dependencies",
        "docker"
      ],
      "automerge": false,
      "schedule": [
        "before 6am on monday"
      ]
    },
    {
      "description": "Helm chart updates",
      "matchDatasources": [
        "helm"
      ],
      "groupName": "Helm charts",
      "schedule": [
        "before 6am on monday"
      ],
      "automerge": false,
      "separateMinorPatch": true,
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "description": "GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "automerge": true,
      "automergeType": "pr",
      "schedule": [
        "before 6am on monday"
      ]
    },
    {
      "description": "Kubernetes version - major updates require manual review",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "eks",
        "kubernetes"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": true,
      "automerge": false,
      "labels": [
        "dependencies",
        "kubernetes",
        "breaking-change"
      ],
      "prPriority": 10
    },
    {
      "description": "Pin AWS Terraform providers to avoid breaking changes",
      "matchDatasources": [
        "terraform-provider"
      ],
      "matchPackageNames": [
        "hashicorp/aws"
      ],
      "rangeStrategy": "pin",
      "automerge": false
    },
    {
      "description": "Security patches - auto-merge with tests",
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "labels": [
        "dependencies",
        "security-patch"
      ],
      "matchPackageNames": [
        "*"
      ]
    }
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/.terraform/**",
    "**/examples/**",
    "**/test/**",
    "**/tests/**"
  ],
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "commitMessagePrefix": "chore(deps):",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security",
      "dependencies"
    ],
    "automerge": false
  },
  "separateMajorMinor": true,
  "separateMultipleMajor": true,
  "rebaseWhen": "behind-base-branch",
  "dependencyDashboardTitle": "Dependency Dashboard",
  "dependencyDashboardHeader": "This dashboard tracks all pending dependency updates.",
  "timezone": "America/New_York",
  "helm-values": {
    "fileMatch": [
      "^helm-values/.*\\.ya?ml$"
    ]
  },
  "regexManagers": [
    {
      "description": "Update Docker images without repository/tag structure (image: repo, tag: version format)",
      "fileMatch": [
        "^helm-values/.*\\.yaml$"
      ],
      "matchStrings": [
        "image:\\s*(?<depName>[^\\s\\n]+)[\\s\\n]+tag:\\s*[\"']?(?<currentValue>[^\"'\\s\\n]+)[\"']?"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ]
}
