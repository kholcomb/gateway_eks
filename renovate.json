{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for LiteLLM EKS deployment",
  "extends": [
    "config:recommended",
    "schedule:weekdays",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergePatch"
  ],
  "baseBranchPatterns": [
    "dev"
  ],
  "timezone": "America/New_York",
  "schedule": [
    "after 9am and before 5pm on monday"
  ],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "labels": [
    "dependencies"
  ],
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "github-actions",
      "commitMessageTopic": "GitHub Actions",
      "addLabels": [
        "github-actions"
      ],
      "semanticCommitType": "ci"
    },
    {
      "description": "Group Helm chart updates",
      "matchManagers": [
        "helmv3",
        "helm-values"
      ],
      "groupName": "helm-charts",
      "commitMessageTopic": "Helm charts",
      "addLabels": [
        "helm"
      ],
      "semanticCommitType": "chore"
    },
    {
      "description": "Group Docker image updates",
      "matchManagers": [
        "dockerfile",
        "docker-compose"
      ],
      "groupName": "docker-images",
      "commitMessageTopic": "Docker images",
      "addLabels": [
        "docker"
      ],
      "semanticCommitType": "chore"
    },
    {
      "description": "Group Terraform provider updates",
      "matchManagers": [
        "terraform"
      ],
      "groupName": "terraform-providers",
      "commitMessageTopic": "Terraform providers",
      "addLabels": [
        "terraform"
      ],
      "semanticCommitType": "infra"
    },
    {
      "description": "AWS Terraform providers",
      "matchManagers": [
        "terraform"
      ],
      "groupName": "terraform-aws",
      "matchPackageNames": [
        "/^hashicorp/aws/",
        "/^aws//"
      ]
    },
    {
      "description": "Kubernetes Terraform providers",
      "matchManagers": [
        "terraform"
      ],
      "groupName": "terraform-kubernetes",
      "matchPackageNames": [
        "/^hashicorp/kubernetes/",
        "/^hashicorp/helm/"
      ]
    },
    {
      "description": "Be conservative with major version updates",
      "matchUpdateTypes": [
        "major"
      ],
      "minimumReleaseAge": "14 days",
      "automerge": false,
      "addLabels": [
        "major-update"
      ]
    },
    {
      "description": "Observability stack (Prometheus, Grafana, Jaeger)",
      "groupName": "observability-stack",
      "addLabels": [
        "observability"
      ],
      "matchPackageNames": [
        "/prometheus/",
        "/grafana/",
        "/jaeger/"
      ]
    },
    {
      "description": "LiteLLM updates",
      "groupName": "litellm",
      "addLabels": [
        "litellm"
      ],
      "matchPackageNames": [
        "/litellm/",
        "/berriai/"
      ]
    },
    {
      "description": "External Secrets Operator",
      "groupName": "external-secrets",
      "addLabels": [
        "secrets"
      ],
      "matchPackageNames": [
        "/external-secrets/"
      ]
    },
    {
      "description": "Redis updates",
      "groupName": "redis",
      "addLabels": [
        "redis"
      ],
      "matchPackageNames": [
        "/redis/"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Image versions in Helm values files",
      "managerFilePatterns": [
        "/helm-values/.*\\.yaml$/"
      ],
      "matchStrings": [
        "image:\\s*['\"]?(?<depName>[^:@\\s'\"]+):(?<currentValue>[^\\s'\"]+)['\"]?"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "helm-values": {
    "managerFilePatterns": [
      "/helm-values/.*\\.yaml$/"
    ]
  },
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "automerge": false
  }
}
